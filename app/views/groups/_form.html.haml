= form_for @group do |f|
  - if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @group.errors.full_messages.each do |message|
          %li= message
            
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :single_user
    = f.check_box :single_user
  .actions
    = f.submit 'Save'
