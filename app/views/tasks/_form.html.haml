= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :due_date
    = f.datetime_field :due_date
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
